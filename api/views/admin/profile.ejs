  <article class="rounded-xl border border-gray-700 bg-gray-800 p-4">
    <div class="flex items-center gap-4">
      <div>
        <h3 class="text-lg font-medium text-white">
          <%= user?.Profile?.title %>
        </h3>

        <div class="flow-root">
          <ul class="-m-1 flex flex-wrap">
            <li class="p-1 leading-none">
              <a href="#" class="text-xs font-medium text-gray-300"> Twitter </a>
            </li>

            <li class="p-1 leading-none">
              <a href="#" class="text-xs font-medium text-gray-300"> GitHub </a>
            </li>

            <li class="p-1 leading-none">
              <a href="#" class="text-xs font-medium text-gray-300">Website</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <ul class="mt-4 space-y-2">
      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Date of Birth</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= formatDOB(user?.Profile?.dateOfBirth) %>
          </p>
        </a>
      </li>

      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Phone</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= user?.Profile?.phone %>
          </p>
        </a>
      </li>
      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Gender</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= user?.Profile?.gender %>
          </p>
        </a>
      </li>
      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Background</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= user?.Profile?.background %>
          </p>
        </a>
      </li>
      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Email</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= user?.email %>
          </p>
        </a>
      </li>
      <li>
        <a href="#" class="block h-full rounded-lg border border-gray-700 p-4 hover:border-pink-600">
          <strong class="font-medium text-white">Role</strong>
          <p class="mt-1 text-xs font-medium text-gray-300">
            <%= user?.role %>
          </p>
        </a>
      </li>
    </ul>
  </article>
  </main>
  </body>

  </html>